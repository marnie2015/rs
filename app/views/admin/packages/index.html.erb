<p id="notice"><%= notice %></p>
<h1 class="page-header">Package
  <a href="<%= new_admin_package_path %>" class="btn btn-primary pull-right">
    <span class="glyphicon glyphicon-plus"></span>
    Add New Package
  </a>
</h1>
<div class="row">
  <div class="col-sm-12">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th>Amount</th>
          <th>Status</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @packages.each do |package| %>
          <tr>
            <td><%= package.title %></td>
            <td><%= package.description %></td>
            <td><%= package.amount %></td>
            <td><%= package.status %></td>
            <td><%= link_to 'Edit', edit_admin_package_path(package) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
