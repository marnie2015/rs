<p id="notice"><%= notice %></p>
<h1 class="page-header">Users
  <a href="<%= new_admin_user_path %>" class="btn btn-primary pull-right">
    <span class="glyphicon glyphicon-plus"></span>
    Add New User
  </a>
</h1>
<div class="row">
  <div class="col-sm-12">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Email</th>
          <th>Password</th>
          <th>Role</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.email %></td>
            <td><%= user.password_digest %></td>
            <td><%= user.role %></td>
            <td><%= link_to 'Edit', edit_admin_user_path(user) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
